{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended-type-checked",
    "prettier"
  ],
  "ignorePatterns": ["lib/**/*", "coverage/**/*"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": true,
    "tsConfigRootDir": "."
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "overrides": [
    {
      "files": ["*.js"],
      "extends": ["plugin:@typescript-eslint/disable-type-checked"]
    }
  ]
}
